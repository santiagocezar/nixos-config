# Rofi configs based on https://github.com/adi1090x/rofi
{
  e102.nixos = { pkgs, ... }: {
    fonts.packages = with pkgs; [
      material-symbols
      (nerdfonts.override { fonts = [ "Iosevka" "JetBrainsMono" ]; })
    ];
  };

  e102.home = { config, pkgs, ... }: {
    home.file."${config.xdg.configHome}/rofi" = {
      source = ./rofi-config;
    };
  };
}
